{
  "name": "@cc-recall/core",
  "version": "0.1.0",
  "description": "Core library for indexing and searching Claude Code session transcripts",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "cc-recall": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "index": "node dist/cli.js index"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.3.0",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^3.6.0",
    "sqlite-vec": "^0.1.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  }
}
